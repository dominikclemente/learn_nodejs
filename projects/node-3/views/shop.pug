extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://images-na.ssl-images-amazon.com/images/I/51Uw5tYiqsL._SY445_QL70_ML2_.jpg", alt="")
                        .card__content
                            h2.product__price $19.99
                            p.product__description The greatest self-help book
                        .card__actions
                            button.btn Add to Cart
        else
            h1 There are no books